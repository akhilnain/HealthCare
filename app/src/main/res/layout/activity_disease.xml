<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_disease"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/head_card"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"
        android:backgroundTint="#34B7FF"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/card_head"
            android:layout_width="405dp"
            android:layout_height="82dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:text="Mr. Sahab Singh you may have..."
            android:textColor="@color/black"
            android:textSize="19sp">

        </TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="626dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        tools:ignore="MissingConstraints">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="inherit">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/content_disease1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                />

            <TextView
                android:id="@+id/info1"
                android:layout_width="343dp"
                android:layout_height="43dp"
                android:background="@color/white"
                android:fontFamily="sans-serif"
                android:visibility="gone"
                android:autoLink="web"
                android:drawableStart="@drawable/ic_info"
                android:paddingTop="14dp"
                android:text="For more Information, click HERE"
                android:textColor="@color/blue"
                android:textSize="20dp" />

                <ImageView
                    android:id="@+id/content_disease2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
